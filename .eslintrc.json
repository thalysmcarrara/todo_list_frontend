{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "trybe-frontend",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control": [ 0, {
            "labelComponents": ["CustomLabel"],
            "labelAttributes": ["inputLabel"],
            "controlComponents": ["CustomInput"],
            "assert": "both",
            "depth": 3
        }]
    }
}
